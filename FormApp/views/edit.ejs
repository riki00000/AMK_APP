<% include partiels/header %>

<div style="width: 30%; margin: 25px auto;">
	<form action="/products/viewProducts/<%= product._id %>/edit?_method=PUT" method="POST">
	  <div class="form-group">
		<label for="productID">Product ID</label>
		<input type="text" name="product[productID]" value="<%= product.productID %>" class="form-control" id="productID" placeholder="ID">
	  </div>
	  <div class="form-group">
		<label for="name">Product Name</label>
		<input type="text" class="form-control" name="product[name]" value="<%= product.name %>" id="name" placeholder="Product Name">
	  </div>
	  <div class="form-group">
		<label for="material">Material</label>
		<input type="text" class="form-control" name="product[material]" value="<%= product.material %>" id="material" placeholder="material">
	  </div>	
	  <div class="form-group">
		<label for="price">Price</label>
		<input type="currency" class="form-control" name="product[price]" value="<%= product.price %>" id="price" placeholder="Price">
	  </div>	
		<button class="btn btn-lg btn-primary btn-block">Update!</button>
	</form>
</div>



<% include partiels/footer %>